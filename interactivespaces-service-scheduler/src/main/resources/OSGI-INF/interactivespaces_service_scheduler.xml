<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" 
    name="interactivespaces.service.scheduler"
    activate="startup" deactivate="shutdown"
    immediate="true" >
  <implementation class="interactivespaces.service.scheduler.internal.QuartzSchedulerService"/>
  
  <service>
    <provide interface="interactivespaces.service.scheduler.SchedulerService"/>
  </service>

  <reference interface="interactivespaces.system.InteractiveSpacesEnvironment"
     name="spaceEnvironment" bind="setSpaceEnvironment" unbind="unsetSpaceEnvironment" />
  
</scr:component>
